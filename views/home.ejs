<!DOCTYPE html>
<html>
  
  <head>
    <meta charset="utf-8" />
  

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/card/1.3.1/js/card.min.js"></script>

    <script src="https://unpkg.com/react@15.3.2/dist/react.js"></script>
    <script src="https://unpkg.com/react-dom@15.3.2/dist/react-dom.js"></script>
    <script src="https://unpkg.com/babel-standalone@6.15.0/babel.min.js"></script>
    <script type="text/babel" src="./app.js"></script>
    <script src="https://use.fontawesome.com/e4042d29e6.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/ratchet/2.0.2/css/ratchet.css" rel="stylesheet" type="text/css">

   <script src="https://js.stripe.com/v2/"></script>
  <link href="styles.css" rel="stylesheet" type="text/css">


  </head>

  
  <body>

    <div id="container"></div>
 

<form id="payment-form" action="/charge" method="POST">

  <div class="container-fluid grid">
    
    <div class="row pull-center">
      <div class="col-md-4">

        <div class="well">

          <div class="row card">
          </div>

          <br/>

          <div class="row-fluid">
            <div class="col-md-8">
              <div class="form-group">
                <label>Credit Card Number </label>
                <input type="text" id="card-number" name="number" class="form-control" />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Expiration</label>

                <input type="text" id="card-expiry" placeholder="MM/YY" name="expiry" class="form-control" />

              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="col-md-8">
              <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" />
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-group">

                <label>CVV </label>

                <input type="text" id="card-cvc" name="cvv" class="form-control" />
              </div>
            </div>
          </div>

          <div class="row ">

            <div class="col-md-12 text-right">
              <button type="submit" class="btn btn-success">Submit</button>
              <button type="button" class="btn btn-info">Clear</button>
            </div>

          </div>

        </div>
      </div>
    </div>
  <div class="bank-errors">

  </div>
</form>
      <script src="scripts.js"></script>
  </body>
  
  
</html>